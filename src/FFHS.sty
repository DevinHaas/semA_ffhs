% Definition for images directory
\newcommand\image[2]{%
    \begin{figure}[!htbp]
    \centering
    \includegraphics[width=10cm]{images/#1.png}
    \caption{#2}
    \label{fig:#1}
    \end{figure}
}


\newcommand{\signature}[3]{%4
    \begin{center}
    \includegraphics[width=#1, height=#2]{images/#3.png}
    \end{center}
}

\newcommand\imageBig[2]{%
    \begin{figure}[!htbp]
    \centering
    \includegraphics[width=\textwidth]{images/#1.png}
    \caption{#2}
    \label{fig:#1}
    \end{figure}
}